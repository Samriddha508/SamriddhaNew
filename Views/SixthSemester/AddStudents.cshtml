
@{
    Layout = null;
}
@model SamriddhaNew.Models.AddStudentsModel
<html>
    <head><title>

    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-LN+7fdVzj6u52u30Kp6M/trliBMCMKTyK833zpbD+pXdCLuTusPj697FH4R/5mcr" crossorigin="anonymous">
</head>
    <body>
        <div class="container mt-4">
            <form asp-action="AddStudents" method="post">
                <label asp-for="FullName" class="form-label" for="Name">Full Name</label>
                <input asp-for="FullName" class="form-control" id="Name" name="Name" />
                <span asp-validation-for="FullName" class="text-danger"></span><br />

            <label asp-for="Address" class="form-label" for="Address">Address</label>
            <input asp-for="Address" class="form-control" id="Address" />
            <span asp-validation-for="Address" class="text-danger"></span><br />
            <button type="submit" class="btn btn-primary">Submit</button>

            </form> <br />
        </div>
    </body>
</html>